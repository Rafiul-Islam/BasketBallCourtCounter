<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rafiulislamrafi.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/Team_A_Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="0"
                android:textSize="90sp" />

            <Button
                android:id="@+id/Team_A_3_Button"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/Team_A_2_Button"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="+2 Points"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/Team_A_Free_Button"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="free Throw"
                android:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:src="@drawable/border" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Team_B_Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="0"
                android:textSize="90sp" />

            <Button
                android:id="@+id/Team_B_3_Button"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/Team_B_2_Button"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="+2 Points"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/Team_B_Free_Button"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="free Throw"
                android:textAllCaps="true"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ResetButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="reset"
            android:textAllCaps="true"
            android:layout_marginTop="50dp"
            />

    </LinearLayout>

</LinearLayout>